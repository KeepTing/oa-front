/* pages/report/newReport/newReport.wxss */
.report-model{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background-color:#ffffff;
  overflow: hidden;
}
.model-box{
  width:100%;
  height:90%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.other{
   width:100%;
   height:10%;
   border-top:1px solid #f8f8f8;
    box-shadow:0px 0px  2px 2px #e1e1e1;
   display: flex;
   justify-content: center;
   align-items: center;
}
.m-content{
  width:80%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.m-flex{
  width: 32%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 20px;
}
.flex-icon{
  border-radius:50%; 
  width: 4rem;
  height:4rem;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 5px;
}
.m-size{
  font-size: 20px;
}




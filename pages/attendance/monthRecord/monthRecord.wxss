/* pages/attendance/monthRecord/monthRecord.wxss */

page{
  width: 100%;
  height: 100%;
  padding: 0px;
  margin: 0px;
}
.main{
  padding: 0px;
  margin: 0px;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.select{
  width: 100%;
  padding: 15px 0px;
  background-color: #f5f5f5;
  
}
.section{
  width: 50%;
  height: 30px;
  line-height: 30px;
  background-color: #ffffff;
  text-align: center;
  border-radius:5%; 
  margin:0px auto;
  border: 1px solid #eee;
}
.iconbtn{
  margin-left: 10px;
}
.info{
  width: 100%;
  padding:0px 3%;
  background-color: #ffffff;
}
.info>view{
  width: 90%;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  flex-direction: row;
  padding:15px 5px;
}
.info>view>text{
  width: 50%;
}
.info>view>text:last-child{
  text-align: right;
}
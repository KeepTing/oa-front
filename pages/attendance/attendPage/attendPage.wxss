/* pages/attendance/attendPage/attendPage.wxss */

page{
  padding: 0px;
  margin: 0px;
  width: 100%;
  height: 99%;
  display: flex;
  justify-content: center;
  align-items: center;

  background: #f2f3f5;
  position: relative;
}
.box{
  border: 1px solid #efeff0;
  width: 90%;
  height: 90%;
  display: inline-block;
  background-color:white; 
  position: relative;
}
.box-view{
  text-align: center;
  margin-top: 30px;
  font-size: 20px;
  color: #6bb31c;
}
.box-view view{
  font-size: 30px;
  
}
.box-view text{
  width: 100%;
  display: inline-block;
  font-family: "楷体";
  font-weight: bold;
}
.circle{
  margin:50px 0px;
  width: 100%;
  height: 120px;

}
.circle .circleBtn{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  border: 8px solid #fec567;
  margin: auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.circle .circleBtn text{
  display: block;
  text-align: center;
  line-height: 20px;
}
.time{
  font-size: 20px;
  font-family: "微软雅黑";
}
.title{
  font-size: 12px;
  font-family: "微软雅黑";
}
.bottom{
  display: inline-block;
  position: absolute;
  bottom: 10px;
  width: 100%;
  text-align: center;
  color: #e0e0e0;
  font-family: "楷体";

}
.nav{
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 50px;
  height: 50px;
 
  color: white;
  background:#5077aa; 
  border-radius:50%; 
}
.nav view{
  display: block;
  font-size: 20px;
   line-height: 50px;
  text-align: center;
}
.circle1{
  margin:150px 0px;
  width: 100%;
  height: 120px;

}
.circleSuccess{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-color: #fec567;
  margin: auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  
}
.circleSuccess text{

  color:#ffffff;
  font-size: 50px;
}
.circle1 .title{
   color: #6bb31c;
   font-size: 18px;
   font-family: "楷体";
   text-align: center;
   padding: 10px 0px;
   margin-bottom: 20px;
}
.circle1 .info{
  width: 60%;
  margin: 0px auto;
  display: block;
  border-top: 1px solid #f8f8f8;
  font-size: 12px;
  padding-top: 10px;

}
.circle1 .info view{
  width: 100%;
  display: inline-block;
  padding: 10px 0px;
}
.circle1 .info text:first-child{
  text-align: left;
  color: #a7a7a7;
  width: 50%;
  display: inline-block;
}
.circle1 .info text:last-child{
  text-align: right;
  color: #4e4e4e;
  width: 50%;
  display: inline-block;
}
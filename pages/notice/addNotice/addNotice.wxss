/* pages/notice/addNotice/addNotice.wxss */
page{
  width: 100%;
}
.main{
   width: 100%;
  margin-bottom:50px; 
  overflow: hidden;
}
.box{
  width: 100%;
  background-color: #fff;
  padding: 10px 0px 10px 10px;
  display: flex;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid #f9f9f9;
  
}
.box text{
  display: flex;
  margin-right: 10px;
  font-size: 37rpx;
}
[class^="icon"], [class*=" icon"] {
    color: #808080;
}
.title{
 width: 40%;
}
.input{
  width: 50%;
  position: relative;
  right: 0px;
  display: inline-block;
  font-size: 13px;
}
.box input{
  display:block;
  font-size: 34rpx; 
  width: 100%;
  float: right;
}
.weeks,.months{
  font-size: 34rpx;
}
textarea{
  font-size: 34rpx;
  margin-left: 10px;
  height: 100px;
}
.btn-size{
  width: 80%;
}

.bottom-nav image{
  width: 48px;
  height: 100%;
}

/* 选择成功后的图片显示样式 */
.imgBoxs{
  width: 100%;
  height: 90px;
  background-color:#ffffff;
  padding: 10px 20px; 
}
.imgBox{
  width: 20%;
  height:100%;
}






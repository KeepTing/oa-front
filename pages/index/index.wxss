/**index.wxss**/
page{
  background-color: #f9f9f9;
  width: 100%;

}
.main-body{
  width: 100%;
  overflow: hidden;
}
.advise,.baseMain,.task{
  width: 100%;
  padding: 10px 0px;
  background-color: #ffffff;
}
.title{
  border-left: 4px solid #4c91ff;
  padding: 0px 10px;
  height: 13px;
  line-height: 13px;
  font-size: 13px;
  color: #4c91ff;
  margin-bottom: 10px;
}
.task-title{
  padding: 0px 10px;
  height: 13px;
  line-height: 13px;
  font-size: 13px;
  margin-bottom: 10px;
}


/**通知提醒**/
.box{
  width: 100%;
  padding: 8px 0px;
  border-bottom: 1px solid #f9f9f9;
  background-color:white; 

}
.box-click{
  font-size: 13px;
  margin: 2px 15px;
  padding:0px;
  padding-bottom: 8px;
}
.box span{
  text-align: center;
  display: inline-block;
  font-size: 20px;
  width: 15%;
}
.all-text{
  display: inline-block;
  margin-left:10px;
  margin-top: 0px;
}
.adbig-title{
  font-size: 13px;
  padding: 2px;
}
.adsmall-title{
  font-size: 12px;
  color: #909090;
}
.box .pot{
  float: right;
  font-size: 12px;
  color: #b1b1b1;
}
/**基础应用**/
.baseMain >.content{
   display: flex;
   flex-wrap:wrap;
   margin: 0 auto;
  justify-content: left;
  border-top: 1px #f7f7f7 solid;
  border-left: 1px #f7f7f7 solid;
    font-size: 15px;
}
.flex-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24.5%;
  border-left:none; 
  flex-wrap:wrap;
  padding: 10px 0px;
  border-bottom: 1px #f7f7f7 solid;
  border-right: 1px #f7f7f7 solid;
  
}
.flex-item text,.flex-item span{
  display:inline-block;
  width: 100%;
  margin: 5px 0px;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.flex-item span{
  font-size: 20px;
}

.c-red{
   color:#f4787f;
}
#red-pot{
  display: inline-block;
  width: 15px;
  height: 15px;
  font-size: 2px;
  color: #ffffff;
  background-color: red;
  border-radius: 50%;
  margin: auto;
  line-height:24px; 
}

.t_w{position:relative;} 

.model{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
}
.model>.model-box{
  width:100%;
  height:42%;
  background-color:#393939;
  padding: 10%;
}
.m-content{
  width:80%;
  display: flex;
  color: #ffffff;
  flex-wrap:wrap;
  align-items: center;
}
.m-flex{
  width: 32%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 20px;
}
.flex-icon{
  border-radius:50%; 
  width: 4rem;
  height:4rem;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 5px;
}
.m-size{
  font-size: 20px;
}
.other{
   width:100%;
   height:58%;
}

.report-model{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background-color:#ffffff;
  overflow: hidden;
  z-index: 1001;
  display: flex;
  justify-content: center;
  align-items: center;
}
.report-model>.model-box{
  width:70%;
  margin: auto;
}
.report-model>.m-content{
  width:100%;
  display: flex;
  color: #000000;
  flex-wrap:wrap;
  align-items: center;
}







/* pages/me/meInfo/meInfo.wxss */
page{
  background-color: #ffffff;
  border-top: none; 
}
.top{
  width: 100%;
  border-bottom: 1px solid #f9f9f9;
  display: flex;
  padding: 10px 0px;
  background-color: #3399e4;
  color: white;
}
.img{
  width: 20%;
  display: flex;
  justify-content: center;
  height: 100%;
  border-radius: 50%;
}
.img image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.info{
  width:60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0px 10px;
}
.addDirectory{
  width:20%;
  font-size: 26px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info .name{
  font-size: 18px;
  font-family: "宋体";
  padding: 5px 0px;
}
.info .post{
  font-size: 14px;
}

.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
  color: #d8d8d8;
  font-family: "宋体";
  padding: 5px 0px;
}  

.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #3399e4;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #3399e4;  
} 
.border-color .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #fff ;
}
.border-color {
  border-bottom: 1px solid #e9e9e9;
}




.bottom-nav{
  padding: 5px 0px;
} 
.box{
  padding: 10px;
 
}
.title{
  color: #9c9c9c;
  font-family: '宋体';
  font-size: 14px;
}
.xq-info{
  padding: 5px 0px 15px;
  width: 100%;
  display: flex;
  font-size: 16px;
  justify-content: center;
  align-items: center;
   border-bottom: 1px solid #e9e9e9;
}
.phone{
  width: 25%;
  color: #cccccc;
}
.qt-phone{
  width: 30%;
}
.xq-btn{
  width:45%;
  text-align: right;
  
}
.xqi-btn{
  width: 45px;
  margin-left: 5px;
  display:inline-block;
  border: 1px solid #eeeeee;
  text-align: center;
  padding: 5px 0px;
  border-radius: 200px;
  color:  #3399e4;
}



.btn{
  background-color: #3399e4;
  border-radius: 200px;
  width: 90%;
}
